<div class="container-fluid">
    <div class="row">
        <h1 class="Knewave text-center">Evènements</h1>
    </div>
    <div class="row">
                <div class="col-12 d-flex justify-content-center mt-3">
                    <form action="/event/search" method="post" class="search mb-5">
                    <input name="search" placeholder="Recherche" type="text">
                    <button type="submit"><i class="bi bi-search m-2"></i>Go</button>
                </form>
                </div>
            </div>
    <div class="row">
        {{#each events}}
        <div class="col-sm-10 col-md-6 col-lg-4">

            <div class="card border-success mt-3">
                <small>
                    <div class="rounded-pill badge text-bg-success float-end">
                            <i class="bi bi-dice-2"></i>
                            <span>{{'event.category.cat_name'}}</span>
                        </div>
                </small>
                <small>
                    <div class="rounded-pill badge text-bg-warning float-end">
                        <i class="bi bi-geo-alt"></i>
                        <span>{{city}}</span>
                    </div>
                </small>
                <div class="card-body border-success">
                    <h5 class="card-title Knewave"><i class="bi bi-dice-2"></i> {{event_name}} <i class="bi bi-dice-2"></i>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary Knewave"><i class="bi bi-calendar-date"></i> le
                        {{event_date}} <br> à {{event_time}}</h6>
                    <p class="card-text text-truncate">{{description}}</p>
                    <a href="{{#if @root.firstname}}/event/read/{{id}}{{else}}/user/login{{/if}}" class="card-link btn rounded-pill btn-success m-1">Voir l'évènement</a>

                    {{#if @root.isModerator}} 

                    <a href="/event/update/{{id}}" class="btn rounded-pill btn-warning m-1">Modifier l'event</a>
                    <button type="button" class="btn rounded-pill btn-danger m-1" data-bs-toggle="modal"
                        data-bs-target="#Modal{{id}}"> Supprimer l'évènement</button>

                    {{/if}}

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="Modal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">Supprimer évènement</h1>
                    </div>
                    <div class="modal-body">
                        Êtes vous sûr de vouloir supprimer l'évènement :<em>{{event_name}}</em></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <form action="/event/delete/{{id}}" method="post">
                            <button type="submit" class="btn btn-danger">Supprimer définitivement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>