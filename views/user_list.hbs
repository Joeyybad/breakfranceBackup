<main>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nom</th>
                            <th class="col">Pr√©nom</th>
                            <th scope="col">Adresse mail</th>
                            <th class="col"></th>
                            <th class="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>
                                {{#if isAdmin}}
                                <i class="bi bi-shield-lock"></i>
                                {{else}}
                                {{#if isModerator}}
                                {{lastname}} <i class="bi bi-pencil-square"></i>
                                {{else}}
                                {{lastname}}
                                {{/if}}
                                {{/if}}
                            </td>
                            <td>
                                {{#if isAdmin}}
                                <i class="bi bi-shield-lock"></i>
                                {{else}}
                                {{#if isModerator}}
                                {{firstname}} <i class="bi bi-pencil-square"></i>
                                {{else}}
                                {{firstname}}
                                {{/if}}
                                {{/if}}
                            </td>
                            <td><em>{{email}}</em></td>
                            <td class="text-center">
                                <a class="btn btn-warning rounded-pill mb-2" href="/user/update/{{id}}">
                                    <i class="bi bi-arrow-repeat"></i>
                                </a>
                                <form action="/user/delete/{{id}}" method="post" style="display:inline;">
                                    <button class="btn btn-danger rounded-pill"
                                        onclick="return confirm('Voulez vous vraiment supprimer ?')" type="submit">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>